<!-- User Input Form -->
<div class="mt-6 bg-gray-800 shadow rounded-lg p-4">
  <h2 class="text-xl font-semibold mb-4">Update a Cell</h2>
  <form id="user-input-form" class="flex flex-wrap gap-4" method="post" action="{{ url_for('update_cell') }}">
    <input type="text" name="row_id" id="row-id-input" placeholder="Row ID" class="border border-gray-600 bg-gray-700 p-2 rounded focus:outline-none" required>
    <input type="text" name="column" id="column-input" placeholder="Column (e.g., col_a)" class="border border-gray-600 bg-gray-700 p-2 rounded focus:outline-none" required>
    <input type="text" name="new_value" id="new-value-input" placeholder="New Value" class="border border-gray-600 bg-gray-700 p-2 rounded focus:outline-none" required>
    <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded">Update Cell</button>
  </form>
</div>